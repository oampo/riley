{
  "name": "riley",
  "version": "0.0.1",
  "description": "A toolkit for creating generative art using an Axidraw pen plotter",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "start": "npm run build && node build/cli/index.js",
    "build": "tsc && cp -r src/views build/",
    "build:check": "tsc --noEmit",
    "prepublish": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "bin": {
    "riley": "build/cli/index.js"
  },
  "author": "Joe Turner <joe@oampo.co.uk>",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/node": "^16.11.27",
    "@types/rbush": "^3.0.0",
    "@types/seedrandom": "^3.0.1",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.1",
    "prettier": "^2.3.2",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "esbuild": "^0.14.25",
    "martinez-polygon-clipping": "^0.7.1",
    "rbush": "^3.0.1",
    "rbush-knn": "^3.0.1",
    "yargs": "^17.1.1"
  }
}
